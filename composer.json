{
  "name": "roave/roave-user-core",
  "description": "The core user module for roave's ecosystem.",
  "type": "module",
  "authors": [
    {
      "name": "Antoine Hedgecock",
      "email": "antoine@roave.com"
    }
  ],
  "require": {
    "zendframework/zendframework": "~2.3.0",
    "doctrine/doctrine-module": "~0.8.0",
    "php": ">=5.5.0",

    "bacon/bacon-authentication": "dev-master@dev",
    "bacon/bacon-user": "dev-master@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "squizlabs/php_codesniffer": "~1.5.2",
    "zf-commons/zfc-rbac": "~2.4",
    "roave/roave-nonce-utility": "~1.0"
  },

  "suggest": {
      "zf-commons/zfc-rbac": "Use the builtin listeners to protect the user entities"
  },

  "autoload": {
    "psr-0": {
      "Roave\\User": "src/"
    }
  },

  "autoload-dev": {
    "psr-0": {
      "Roave\\UserTest": "test/"
    }
  }
}
